---
import { Image } from 'astro:assets'
import { FeaturedProjectsList } from '../data';
---
<!-- Cambiar dificultad y permitir que al hacer click vayas directamente a los detalles -->
<section id="proyectos" class="projects" aria-label="Projectos personales destacados">
    <div class="projects-items">
        <h2 class="projects-title">Proyectos Destacados</h2>
        <div class="projects-preview">
            {
                FeaturedProjectsList.map(project => (
            <div class="project-image-container">
                <a href={project.DetailsLink.Href} class="invisible-link"
                title={project.DetailsLink.Title}
                target={project.DetailsLink.Target ? '_blank' : '_self'}>
    <Image 
        class="project-image"
        src={project.CoverImage.Image}
        alt={project.CoverImage.Alt}
        loading="lazy"
    />
    <span class="project-name">{project.Name}</span>

    <div class="project-toolbar">
        <span>{project.Difficulty}</span>
        <div style={{ display: "flex", gap: "5px" }}>
            {
                project.Languages.map(lang => (
                    <Image 
                        src={lang.Logo.Image}
                        alt={lang.Logo.Alt}
                        title={lang.Name}
                        style={{ height: '20px' }}
                    />
                ))
            }
        </div>
    </div>
    </a>
</div>
        ))
            }
        </div>
        <a href="/projects" title="Ver más" class="see-more primary-button button">Ver más</a>
    </div>
</section>
 <div class="wave-container"></div>